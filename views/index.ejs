<html>
  <head>
    <title>brandle</title>
    <link href="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.15/angular.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/angular-ui-router/0.2.15/angular-ui-router.js"></script>

    <!--LOCAL SCRIPTS-->
    <script src="/javascripts/brandleApp.js"></script>
    <script src="/javascripts/config/routes.js"></script>
    <script src="/javascripts/controllers/authController.js"></script>
    <script src="/javascripts/controllers/mainController.js"></script>
    <script src="/javascripts/controllers/navController.js"></script>
    <script src="/javascripts/services/authService.js"></script>

    <style> .glyphicon-thumbs-up { cursor:pointer } </style>
  </head>
  <body ng-app="brandle">
    <nav class="navbar navbar-default pull-right" ng-controller="NavCtrl">
      <ul class="nav navbar-nav">
        <li ng-show="isLoggedIn()"><a>{{ currentUser() }}</a></li>
        <li ng-show="isLoggedIn()"><a href="" ng-click="logOut()">Log Out</a></li>
	<li ng-show="isLoggedIn()"><a href="/#/settings">Your Settings</a></li>
        <li ng-hide="isLoggedIn()"><a href="/#/login">Log In</a></li>
        <li ng-hide="isLoggedIn()"><a href="/#/register">Register</a></li>
      </ul>
    </nav>
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <ui-view></ui-view>

        <!--HOME-->
        <script type="text/ng-template" id="/home.html">
          <div class="page-header">
            <h1>Brandle</h1>
          </div>
        </script>

        <!--REGISTER-->
        <script type="text/ng-template" id="/register.html">
          <div class="page-header">
            <h1>Brandle</h1>
          </div>

          <div ng-show="error" class="alert alert-danger row">
            <span>{{ error.message }}</span>
          </div>

          <form ng-submit="register()" style="margin-top:30px;">
            <h3>Register</h3>

          	<div class="form-group">
          	  <input type="text" class="form-control" placeholder="Username" ng-model="user.username"></input>
          	</div>
          	<div class="form-group">
          	  <input type="password" class="form-control" placeholder="Password" ng-model="user.password"></input>
          	</div>
          	<button type="submit" class="btn btn-primary">Register</button>
          </form>
        </script>

        <!--LOGIN-->
        <script type="text/ng-template" id="/login.html">
          <div class="page-header">
            <h1>Brandle</h1>
          </div>

          <div ng-show="error" class="alert alert-danger row">
            <span>{{ error.message }}</span>
          </div>

          <form ng-submit="logIn()" style="margin-top:30px;">
            <h3>Log In</h3>
		<div class="form-group">
		  <input type="text" class="form-control" placeholder="Username" ng-model="user.username"></input>
		</div>
          	<div class="form-group">
          	  <input type="password" class="form-control" placeholder="Password" ng-model="user.password"></input>
          	</div>
            <button type="submit" class="btn btn-primary">Log In</button>
          </form>
        </script>

	<script type="text/ng-template" id="/settings.html">
	  <div class="page-header">
	      <h1> Brandle </h1>
	      <h2> Settings </h2>
	  </div>

		  <!-- rest of template -->
	</script>
  </body>
</html>
